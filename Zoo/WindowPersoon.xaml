<Window x:Class="Dierenpark.WindowPersoon"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dierenpark"
        mc:Ignorable="d"
        Title="WindowPersoon" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition x:Name="PersoonRow0" Height="225"/>
            <RowDefinition x:Name="PersoonRow1" Height="225"/>
        </Grid.RowDefinitions>
        <StackPanel Margin="0,50,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical" Grid.Row="0">
            <Label Margin="0,0,0,10" Content="Selecteer de geboortedatum"/>
            <DatePicker Name="Persoon_Birth" HorizontalAlignment="Center" SelectedDateChanged="Persoon_Birth_SelectedDateChanged"/>
        </StackPanel>
        <Button Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Content="Add" Grid.Row="1" Height="25" Width="60" Click="Button_Click"/>
    </Grid>
</Window>
